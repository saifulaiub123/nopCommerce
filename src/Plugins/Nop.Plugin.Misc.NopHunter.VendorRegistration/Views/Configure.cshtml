@model VendorSearchModelCustom
@using Nop.Plugin.Misc.NopHunter.VendorRegistration.Models;
@using Nop.Plugin.Misc.NopHunter.VendorRegistration.Models.DataTables

@{
    Layout = "_ConfigurePlugin";
    //page title
    ViewBag.PageTitle = T("Admin.Vendors").Text;
    //active menu item (system name)
    //NopHtml.SetActiveMenuItemSystemName("Vendors");
}

@{
    const string hideSearchBlockAttributeName = "VendorsPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Vendors")
    </h1> 
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-header">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="card-tools icon-collapse">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                            </div>
                            @* <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div> *@
                        </div>
                        @* <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="card-tools icon-collapse">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                            </div>
                        </div> *@
                        
                    </div>
                    <div class="card-body">
                        

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchName" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchName" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchEmail" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchEmail" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchIsActive" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-select asp-for="SearchIsActive" class="form-control" asp-items="Model.AvailableActiveValues" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <button type="button" id="search-vendors" class="btn btn-primary btn-search float-right">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <nop-doc-reference asp-string-resource="@T("Admin.Documentation.Reference.VendorManagement", Docs.VendorManagement + Utm.OnAdmin)" />
                            </div>
                            <div class="col-md-8">
                                <div class="float-right">
                                    <a asp-controller="Vendor" asp-action="Create" class="btn btn-primary">
                                        <i class="fas fa-plus-square"></i>
                                        @T("Admin.Common.AddNew")
                                    </a>
                                </div>
                                <button type="button" name="importexcel" class="btn bg-olive float-right mr-1" id="activate-selected-send-email">
                                    <i class="fas fa-paper-plane"></i>
                                    @T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.List.Button.ActivateAndSendEmail")
                                </button>
                                <button type="button" name="importexcel" class="btn bg-olive float-right mr-1" id="activate-selected">
                                    <i class="fas fa-check-square"></i>
                                    @T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.List.Button.Activate")
                                </button>
                            </div>
                        </div>

                        @await Html.PartialAsync("~/Plugins/Misc.NopHunter.VendorRegistration/Areas/Admin/Views/Shared/TableCustom.cshtml", new DataTablesModel
                        {
                           Name = "vendors-grid",
                           UrlRead = new DataUrl("List", "VendorRegistrationAdmin", null),
                           SearchButtonId = "search-vendors",
                           Length = Model.PageSize,
                           LengthMenu = Model.AvailablePageSizes,
                           Filters = new List<FilterParameter>
                           {
                                new FilterParameter(nameof(Model.SearchName)),
                                new FilterParameter(nameof(Model.SearchEmail)),
                                new FilterParameter(nameof(Model.SearchIsActive))
                           },

                           ColumnCollection = new List<ColumnProperty>
                           {
                                new ColumnProperty(nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Id))
                                {
                                    IsMasterCheckBox = true,
                                    Render = new RenderCheckBox("checkbox_vendor"),
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Width = "30"
                                },
                                new ColumnProperty(nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Name))
                                {
                                    Title = T("Admin.Vendors.Fields.Name").Text,
                                    Width = "300"
                                },
                                new ColumnProperty(nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Email))
                                {
                                    Title = T("Admin.Vendors.Fields.Email").Text,
                                    Width = "300"
                                },
                                new ColumnProperty(nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Active))
                                {
                                    Title = T("Admin.Vendors.Fields.Active").Text,
                                    Width = "50",
                                    ClassName =  NopColumnClassDefaults.CenterAll,
                                    Render = new RenderBoolean()
                                },
                                new ColumnProperty(nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Id))
                                {
                                    Title = T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.List.Button.Activate").Text,
                                    Width = "100",
                                    ClassName =  NopColumnClassDefaults.CenterAll,
                                    Render = new RenderButtonCustomVR(NopButtonClassDefaults.Olive, T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.List.Button.Activate").Text)
                                    {
                                        OnClickFunctionName =  "activateVendor",
                                        ButtonDisable = new ButtonDisable()
                                        {
                                            ColumnName = nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Active),
                                            Value = "true"
                                        }
                                    }
                                },
                                new ColumnProperty(nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Id))
                                {
                                    Title = T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.List.Button.ActivateAndSendEmail").Text,
                                    Width = "100",
                                    ClassName =  NopColumnClassDefaults.CenterAll,
                                    Render = new RenderButtonCustomVR(NopButtonClassDefaults.Olive, T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.List.Button.ActivateAndSendEmail").Text)
                                    {
                                        OnClickFunctionName =  "activateVendorAndSendMail",
                                        ButtonDisable = new ButtonDisable()
                                        {
                                            ColumnName = nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Active),
                                            Value = "true"
                                        }
                                    }
                                },
                                new ColumnProperty(nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Id))
                                {
                                    Title = T("Admin.Common.Edit").Text,
                                    Width = "50",
                                    ClassName =  NopColumnClassDefaults.Button,
                                    Render = new RenderButtonEdit(new DataUrl("~/Admin/Vendor/Edit/", nameof(Nop.Web.Areas.Admin.Models.Vendors.VendorModel.Id)))
                                }
                            }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<form asp-controller="VendorRegistrationAdmin" asp-action="ActivateVendor" method="post" id="activate-selected-vendor-form">
    <input type="hidden" id="selectedIds" name="selectedIds" value="" />
    <input type="checkbox" id="isSendEmail" name="isSendEmail" value="false" />
</form>

<script>
    $(function() {
        $('#activate-selected').on('click',function (e) {
            e.preventDefault();
            var ids = selectedIds.join(",");
            alert(ids);
            if (!ids) {
                $('#activatedSelected-info').text("@T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.NoVendorSelected")");
                $("#activatedSelected").trigger("click");
            }
            else {
                $('#activate-selected-vendor-form #selectedIds').val(ids);
                $('#activate-selected-vendor-form').submit();
                updateTable('#vendors-grid');
            }
            return false;
        });

        $('#activate-selected-send-email').on('click',function (e) {
            e.preventDefault();
            var ids = selectedIds.join(",");
            alert(ids);

            if (!ids) {
                $('#activatedSelected-info').text("@T("Plugins.Misc.NopHunter.VendorRegistration.Admin.Vendors.NoVendorSelected")");
                $("#activatedSelected").trigger("click");
            }
            else {
                $('#activate-selected-vendor-form #selectedIds').val(ids);
                $('#activate-selected-vendor-form #isSendEmail').prop('checked', true);
                $('#activate-selected-vendor-form').submit();
                updateTable('#vendors-grid');
            }
            return false;
        });
    });
</script>
<nop-alert asp-alert-id="activatedSelected" />
