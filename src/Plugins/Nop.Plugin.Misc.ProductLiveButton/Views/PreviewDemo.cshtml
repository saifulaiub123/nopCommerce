@model PreviewDemoModel

<style>
    .full-screen-preview {
        width: 100%;
        height: 100%;
        background-color: white;
    }

    .preview-header {
        font-size: 12px;
        height: 68px;
        background-color: #262626;
        z-index: 100;
        line-height: 54px;
        margin-bottom: 1px;
    }

    .preview-logo {
        float: left;
        padding: 0 20px;
    }

    .preview-logo a {
        display: inline-block;
        position: absolute;
        top: 18px;
        height: 18px;
        width: 152px;
    }

    .preview-actions {
        float: right;
        margin: 16px 16px 16px 16px;
    }

    .add-to-cart-button {
        height: 43px;
        border: 0;
        background-color: #4ab2f1;
        padding: 0 24px;
        font-size: 15px;
        color: #fff;
        top: 18px;
        height: 36px;
    }
</style>

<div class="preview-page">
    <div class="page-body">
        <div class="preview-header">
            <div class="preview-logo">
                <a href="/">
                    <img title="" alt="Your store name" src="@Model.LogoModel.LogoPath">
                </a>
            </div>

            <div id="js-preview-actions" class="preview-actions">
                <div class="preview-action-buy">
                    <button type="button" class="button-1 add-to-cart-button" onclick="">@T("ShoppingCart.AddToCart")</button>
                    @* <a class="header-buy-now e-btn--3d -color-primary" href="#">@T("ShoppingCart.AddToCart")</a> *@
                </div>
            </div>
        </div>
        <iframe class="full-screen-preview" src="@Model.DemoLink" name="preview-frame" frameborder="0" noresize="noresize">
        </iframe>
    </div>
</div>